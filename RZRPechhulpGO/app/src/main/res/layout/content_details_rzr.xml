<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tan.rzrpechhulpgo.DetailsRZRActivity"
    tools:showIn="@layout/activity_details_rzr"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/info_Image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/invisibleBorder"
        android:background="@drawable/info_edit_new"/>

    <TextView
        android:id="@+id/invisibleBorder"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rzr_info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <TextView
        android:id="@+id/hyperlink"
        android:layout_below="@id/info_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:autoLink="web"
        android:textColor="@color/textcolor"
        android:text="@string/rzr_info"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
